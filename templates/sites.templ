package templates

import (
	"app/config"
	"app/database"
	"app/internal/db"
)

templ Site(s db.SitesWithMetric) {
	@templ.Raw(database.SanitizeHTML(s.SiteHtmlPublished))
}

templ SiteHeader(tr func(string) string, s db.SitesWithMetric) {
	<nav class="m-4">
		<a href={ config.DashboardPath }>
			‚Üê { tr("my_sites") }
		</a>
		<div class="flex flex-row">
			<button
				class="icon edit"
				onclick={ templ.JSFuncCall("window.location.assign", config.EditorPath+s.SiteSlug) }
			></button>
		</div>
	</nav>
	<header class="conex-banner">
		<img src={ config.AssetsPath + "default-banner.svg" }/>
		<div class="conex-banner-content">
			<h1>{ s.SiteTitle }</h1>
			<p>{ s.SiteDescription }</p>
		</div>
	</header>
}
